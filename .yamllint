---

extends: default

ignore:
  - roles/*/files/

rules:
  line-length:
    max: 120
  truthy:
    allowed-values:
      - "true"
      - "false"
      - "yes"
      - "no"
      - "on"
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  document-start: disable
  indentation:
    spaces: 2
    indent-sequences: true
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
